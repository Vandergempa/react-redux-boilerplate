{
    "setupFiles": [
        "raf/polyfill",
        "<rootDir>/src/tests/setupTests.js"
    ],
    "collectCoverageFrom": [
        "**/*.{js,jsx}",
        "!**/node_modules/**",
        "!**/vendor/**"
      ],
      "snapshotSerializers": [
          "enzyme-to-json/serializer"
      ],
      "verbose": true,
      "testURL": "http://localhost/",
      "transform": {
        "^.+\\.js$": "babel-jest",
        "^.+\\.jsx$": "babel-jest"
      },
      "moduleNameMapper": {
        "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js",
        "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
      }
}